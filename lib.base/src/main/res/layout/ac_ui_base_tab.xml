<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hawk.lib.base.ui.widget.SlidingTabLayout
        android:id="@+id/slidingTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_tab_height"
        android:background="?attr/colorPrimary"
        android:textAppearance="@style/TextAppearance.Tab"
        app:indicatorHeight="@dimen/common_indicator_height"
        app:contentInsetStart="@dimen/common_indicator_start"
        app:selectedColor="?attr/colorAccent"
        android:fadingEdgeLength="@dimen/common_spacing" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

</LinearLayout>